{
  "name": "gs-infra-estates",
  "version": "1.0.0",
  "description": "Real estate website for GS Infra & Estates - flats, plots, and agricultural land in Uttarakhand",
  "main": "index.js",
  "scripts": {
    "start": "node --max-old-space-size=512 index.js",
    "dev": "nodemon --watch . --ext js,json --ignore public/ index.js",
    "prod": "NODE_ENV=production node --max-old-space-size=1024 index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "setup-db": "node setupIndexes.js",
    "migrate": "node migrations/run.js",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "real-estate",
    "properties",
    "plots",
    "flats",
    "uttarakhand",
    "rishikesh",
    "dehradun"
  ],
  "author": "Gaurav Saklani <gauravsaklani021106@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "compression": "^1.8.1",
    "connect-mongo": "^5.0.0",
    "connect-redis": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.7.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "redis": "^4.7.0",
    "resend": "^4.0.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "eslint": "^9.12.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^7.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.0",
    "uuid": "^10.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "clover"]
  }
}
