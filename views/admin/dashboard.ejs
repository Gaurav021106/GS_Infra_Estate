<div class="min-h-screen bg-gray-50 px-4 md:px-6 lg:px-10 py-6 pt-24">
  <h1 class="text-2xl md:text-3xl font-bold mb-6">
    <%= editingProperty ?
      `Edit: ${editingProperty.title}` : 'Admin Dashboard' %>
  </h1>

  <div id="toast"
       class="fixed top-20 right-4 z-50 hidden px-4 py-2 rounded-lg shadow-lg text-sm font-medium text-white bg-gray-800/90">
  </div>

  <section class="bg-white rounded-xl shadow p-5 md:p-6 mb-10 border border-gray-100">
    <h2 class="text-lg md:text-xl font-semibold mb-4">
      <%= editingProperty ?
      'Edit Property' : 'Add New Property' %>
    </h2>
    
    <form 
      id="propertyForm"
      action="<%= editingProperty ? `/admin/properties/${editingProperty._id}/update` : '/admin/properties/new' %>" 
      method="POST" 
      enctype="multipart/form-data"
      class="grid md:grid-cols-2 gap-4 md:gap-5"
      autocomplete="off"
    >
      <div>
        <label for="category" class="block text-sm font-medium mb-1">
          Category<span class="text-red-500">*</span>
        </label>
        <select
          id="category"
          name="category"
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          required
          autocomplete="off"
        >
          <option value="residential_properties" 
          <%= editingProperty?.category === 'residential_properties' ? 'selected' : '' %>>Residential Properties</option>
          <option value="commercial_plots" <%= editingProperty?.category === 'commercial_plots' ?
          'selected' : '' %>>Commercial Plots</option>
          <option value="land_plots" <%= editingProperty?.category === 'land_plots' ?
          'selected' : '' %>>Land & Plots</option>
          <option value="premium_investment" <%= editingProperty?.category === 'premium_investment' ?
          'selected' : '' %>>Premium & Investment</option>
        </select>
      </div>

      <div>
        <label for="title" class="block text-sm font-medium mb-1">
          Title<span class="text-red-500">*</span>
        </label>
        <input 
          type="text"
          id="title"
          name="title" 
          value="<%= editingProperty?.title || '' %>" 
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          required
        >
      </div>

      <div>
        <label for="price" class="block text-sm font-medium mb-1">
          Price (INR)<span class="text-red-500">*</span>
        </label>
        <input 
          type="number" 
          id="price"
          name="price" 
          value="<%= editingProperty?.price || '' %>" 
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          min="0"
          step="1"
          autocomplete="off"
          required
        >
      </div>

      <div>
        <label for="location" class="block text-sm font-medium mb-1">
          Location<span class="text-red-500">*</span>
        </label>
        <input 
          type="text"
          id="location"
          name="location" 
          value="<%= editingProperty?.location ||
          '' %>" 
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          placeholder="Tapovan, Rishikesh, Uttarakhand"
          required
        >
      </div>

      <div>
        <label for="cityInput" class="block text-sm font-medium mb-1">
          City<span class="text-red-500">*</span>
        </label>
        <input 
          type="text"
          id="cityInput"
          name="city"
          value="<%= editingProperty?.city ||
          '' %>"
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          placeholder="Rishikesh"
          required
        >
      </div>

      <div>
        <label for="stateInput" class="block text-sm font-medium mb-1">
          State<span class="text-red-500">*</span>
        </label>
        <input 
          type="text"
          id="stateInput"
          name="state"
          value="<%= editingProperty?.state ||
          '' %>"
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          placeholder="Uttarakhand"
          required
        >
      </div>

      <div>
        <label for="locality" class="block text-sm font-medium mb-1">
          Locality
        </label>
        <input 
          type="text"
          id="locality"
          name="locality" 
          value="<%= editingProperty?.locality ||
          '' %>" 
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          placeholder="Tapovan, Laxman Jhula"
        >
      </div>

      <div>
        <label for="pincode" class="block text-sm font-medium mb-1">
          Pincode
        </label>
        <input 
          type="text"
          id="pincode"
          name="pincode" 
          value="<%= editingProperty?.pincode ||
          '' %>" 
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          placeholder="249192"
          pattern="[0-9]{6}"
          maxlength="6"
        >
      </div>

      <div class="md:col-span-2">
        <label for="suitableFor" class="block text-sm 
          font-medium mb-1">
          Suitable For
        </label>
        <input 
          type="text"
          id="suitableFor"
          name="suitableFor" 
          value="<%= editingProperty?.suitableFor?.join(', ') ||
          '' %>" 
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          placeholder="Family, Investment, Farmhouse"
        >
      </div>

      <div class="md:col-span-2">
        <label for="description" class="block text-sm font-medium mb-1">
          Property Description
          <span class="text-xs text-gray-500">(Main content shown on detail page)</span>
        </label>
        <textarea
          id="description"
          name="description"
          rows="5"
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          placeholder="Describe the property in detail..."
        ><%= editingProperty?.description || '' %></textarea>
      </div>

      <div class="md:col-span-2">
        <label for="features" class="block text-sm font-medium mb-1">
          Key Features
          <span class="text-xs text-gray-500">(comma separated, shown as bullets on property page)</span>
        </label>
        <textarea
          id="features"
          name="features"
          rows="2"
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          placeholder="Roadside plot, Gated society, River view, Registry available"
        ><%= editingProperty?.features?.join(', ') || '' %></textarea>
      </div>

      <div>
        <label for="status" class="block text-sm font-medium mb-1">
          Status
        </label>
        <select
          id="status"
          name="status"
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
        >
          <option value="available" <%= editingProperty?.status === 'available' ?
          'selected' : '' %>>Available</option>
          <option value="sold" <%= editingProperty?.status === 'sold' ?
          'selected' : '' %>>Sold</option>
          <option value="on_hold" <%= editingProperty?.status === 'on_hold' ?
          'selected' : '' %>>On Hold</option>
        </select>
      </div>

      <div class="md:col-span-2">
        <label for="searchTags" class="block text-sm font-medium mb-1">
          Search Tags
          <span class="text-xs text-gray-500">(comma separated for better search)</span>
        </label>
        <input 
          type="text"
          id="searchTags"
          name="searchTags" 
          value="<%= editingProperty?.searchTags?.join(', ') || '' %>" 
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
          placeholder="river view, gated, investment, rishikesh"
        >
      </div>

      <div class="md:col-span-2">
        <label for="seoMetaDescription" class="block text-sm font-medium mb-1">
          SEO Meta Description
          <span class="text-xs text-gray-500">(max 160 characters)</span>
        </label>
        <textarea
          id="seoMetaDescription"
          name="seoMetaDescription"
          rows="2"
          maxlength="160"
          class="border rounded-lg px-3 py-2 w-full text-sm md:text-base"
          autocomplete="off"
        ><%= editingProperty?.seoMetaDescription ||
          '' %></textarea>
      </div>

      <% if (editingProperty) { %>
        <% if (editingProperty.map3dUrl) { %>
          <div class="md:col-span-2">
            <label class="block text-sm font-medium mb-1">Current 3D Map:</label>
            <img src="<%= editingProperty.map3dUrl %>" class="w-32 h-32 object-cover rounded-lg border" />
          </div>
        <% } %>
        
        <% if (editingProperty.virtualTourUrl) { %>
          <div class="md:col-span-2">
            <label class="block text-sm font-medium mb-1">Current Virtual Tour:</label>
            <video src="<%= editingProperty.virtualTourUrl %>" class="w-32 h-32 object-cover rounded-lg border" controls></video>
