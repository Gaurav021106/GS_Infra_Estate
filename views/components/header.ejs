<!doctype html>
<html lang="en">

<head>
  <!-- Basic -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />

  <!-- Title -->
  <title>GS Infra & Estate | Buy Property in Dehradun & Rishikesh</title>

  <!-- Favicon -->
  <link rel="icon" type="image/jpeg" href="/images/logo.jpeg">

  <!-- Canonical -->
  <link rel="canonical" href="https://www.gsinfraandestate.com" />

  <!-- SEO Meta -->
  <meta name="description"
    content="Buy residential flats, villas, plots & commercial properties in Dehradun, Rishikesh & Mussoorie. GS Infra & Estate – a trusted real estate advisor in Uttarakhand." />
  <meta name="author" content="GS Infra & Estate" />
  <meta name="robots" content="index, follow" />

  <!-- Open Graph (Social Sharing) -->
  <meta property="og:title" content="GS Infra & Estate | Trusted Property Dealers in Uttarakhand" />
  <meta property="og:description"
    content="Explore verified property listings in Dehradun, Rishikesh & nearby areas with GS Infra & Estate." />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://www.gsinfraandestate.com" />
  <meta property="og:image" content="https://www.gsinfraandestate.com/images/logo.jpeg" />

  <!-- Fonts -->
  <link href="https://fonts.cdnfonts.com/css/instrument-serif" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Italiana&display=swap" rel="stylesheet">

  <!-- Tailwind (MVP OK – build version recommended later) -->
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

  <!-- Structured Data (Organization + RealEstateAgent) -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "Organization",
        "name": "GS Infra & Estate",
        "url": "https://www.gsinfraandestate.com",
        "logo": "https://www.gsinfraandestate.com/images/logo.jpeg",
        "sameAs": [
          "https://www.facebook.com/your-page",
          "https://www.instagram.com/your-page"
        ]
      },
      {
        "@type": "RealEstateAgent",
        "name": "GS Infra & Estate",
        "url": "https://www.gsinfraandestate.com",
        "image": "https://www.gsinfraandestate.com/images/logo.jpeg",
        "areaServed": [
          "Dehradun",
          "Rishikesh",
          "Mussoorie",
          "Uttarakhand"
        ],
        "address": {
          "@type": "PostalAddress",
          "addressRegion": "Uttarakhand",
          "addressCountry": "IN"
        }
      }
    ]
  }
  </script>

  <!-- Global Styles -->
  <style>
    :root {
      --global-transition-delay: 150ms;
      --global-transition-duration: 150ms;
    }

    html {
      scroll-behavior: smooth;
    }

    body {
      font-family: 'Instrument Serif', serif;
    }

    .heading {
      font-family: 'Italiana', serif;
    }

    a,
    button,
    input,
    textarea,
    select,
    img,
    .heading {
      transition-delay: var(--global-transition-delay);
      transition-duration: var(--global-transition-duration);
      transition-timing-function: ease;
    }

    .page-exit {
      opacity: 0;
      transform: translateY(6px);
      transition: opacity var(--global-transition-duration) ease var(--global-transition-delay),
        transform var(--global-transition-duration) ease var(--global-transition-delay);
    }

    .page-enter {
      opacity: 1;
      transform: translateY(0);
      transition: opacity var(--global-transition-duration) ease,
        transform var(--global-transition-duration) ease;
    }

    img {
      will-change: transform, opacity;
    }

    ::selection {
      background-color: #fde68a;
      color: #1f2937;
    }
  </style>

  <!-- SPA Navigation -->
  <script src="/javascripts/spa-nav.js" defer></script>

</head>

<body class="bg-white text-gray-900">
