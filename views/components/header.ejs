<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://fonts.cdnfonts.com/css/instrument-serif" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Italiana&display=swap" rel="stylesheet">
    <style>
        /*
        Root-level CSS variables for global transition timing.
        Adjust these to change how quickly page enter/exit animations run.
        */
        :root {
            --global-transition-delay: 150ms;    /* delay before transition starts */
            --global-transition-duration: 150ms; /* how long the transition takes */
        }
        
        /* Heading font (Italiana) applied only to elements with the .heading class */
        .heading {
            font-family: 'Italiana', serif;
      }

      /* Smooth scrolling for in-page anchors */
      html { scroll-behavior: smooth; }
      
      /*
      Main content typography adjustments:
      - Instrument Serif for body text
      - increased word-spacing and letter-spacing for a more elegant look
      */
      
      /* Apply consistent transition timing to common interactive elements */
      a,
      button,
      input,
      textarea,
      select,
      img,
      .heading {
          transition-delay: var(--global-transition-delay);
          transition-duration: var(--global-transition-duration);
          transition-timing-function: ease;
        }
        
        /* Page transition helper classes used by the client-side navigation script */
        .page-exit {
            opacity: 0;
            transform: translateY(6px);
            transition: opacity var(--global-transition-duration) ease var(--global-transition-delay),
            transform var(--global-transition-duration) ease var(--global-transition-delay);
      }
      
      .page-enter {
          /* Enter uses no extra delay so it appears smooth after replacement */
          opacity: 1;
          transform: translateY(0);
          transition: opacity var(--global-transition-duration) ease,
          transform var(--global-transition-duration) ease;
        }
        
        /* Selection color for improved UX when users select text */
        ::selection {
            background-color: #fde68a;   /* amber-200 */
            color: #1f2937;              /* gray-800 */
        }
        </style>
<script src="/javascripts/spa-nav.js"></script>
